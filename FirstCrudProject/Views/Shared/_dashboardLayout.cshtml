<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="#">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        body {
            background-image: url('../../Image/bck43.jpg');
            margin: 0;
            width: 100%;
            height: 100%;
            background-repeat: no-repeat;
            background-size: cover;
            margin: 0;
            padding: 0;
        }

        header {
            background: black;
            color: white;
            padding: 8px 0px 6px 40px;
            height: 55px;
        }

            header h1 {
                display: inline;
                font-weight: 400;
                font-size: 32px;
                float: left;
                margin-top: 0px;
                margin-right: 1000px;
            }

        nav ul {
            display: inline;
            padding: 0px;
            float: left;
        }

            nav ul li {
                display: inline-block;
                list-style-type: none;
                color: white;
                float: left;
                margin-top: 8px;
                margin-left: 20px;
            }

                nav ul li a {
                    color: white;
                    text-decoration: none;
                }

        .homered {
            background-color: red;
            padding: 30px 10px 26px 10px;
        }

        .divider {
            background-color: red;
            height: 5px;
        }

        .homeblack:hover {
            background-color: red;
            padding: 30px 10px 26px 10px;
        }

        .container {
            color: white;
        }
    </style>

</head>
<body>
    <header>
        <nav>
            <h1>Welcome </h1>
            <ul id="nav">
                <li>@Html.ActionLink("Home", "Index", "Login", null, new { @class = "homeblack" }) </li>
                <li>@Html.ActionLink("About", "About", "Operations", null, new { @class = "homeblack" })</li>
                <li>@Html.ActionLink("Contact", "Contact", "Operations", null, new { @class = "homeblack" })</li>
                <li>@Html.ActionLink("Logout", "LogOut", "Login", null, new { @class = "homeblack" })</li>
            </ul>
        </nav>
    </header>
    <div class="divider"></div>

    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/validate.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    @RenderSection("scripts", required: false)



</body>
</html>
